<!doctype html>
<html lang="en">
<head>
  <title>Carlos Lamas</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" href="/stylesheets/screen.css" />
  <script src="/javascripts/html5.js"></script>
</head>
<body>
  <div id="wrapper">
    <header>
      <a href="/"><h1>Carlos <strong>Lamas</strong></h1></a>
      <nav>
        <ul>
          <li class="about"><a href="#about">About</a></li>
          <li class="contact"><a href="#contact">Contact</a></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
    <footer>
      Footer
    </footer>
  </div>
  <script src="/javascripts/jquery-1.7.1.min.js"></script>
  <script src="/javascripts/jquery.fancybox.pack.js"></script>
  <script type="text/javascript">
  	$(document).ready(function() {
  	  $("nav a").fancybox({
  	    background: 'red',
  	    helpers: { 
          overlay: {
            opacity: 0.95,
            css: {'background-color': '#551A8B'}
          } 
        },
  		  padding: 0,
  		  wrapCSS: 'modal'
      });
  		$(".video").fancybox({
  		  aspectRatio: true,
  		  autoSize: false,
  		  height: 450,
  		  padding: 0,
  		  width: 800,
  		  helpers: {
      		title: {
      			type: 'outside'
      		}
      	}
      });
      $(".image").fancybox({
        loop: false,
  		  padding: 0,
  		  helpers: {
      		title: {
      			type: 'outside'
      		}
      	}
      });
  	});
  </script>
</body>
</html>