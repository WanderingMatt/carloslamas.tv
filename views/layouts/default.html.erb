<!doctype html>
<html lang="en">
<head>
  <title>Carlos Lamas &mdash; Editor</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="google-site-verification" content="1xf2CrUZy56Pp73b5wKKRJ02x-qZB02S9vtaq9pwwrY" />
  <link rel="stylesheet" href="/stylesheets/screen.css" />
  <!--[if lt IE 9]>
    <script src="/javascripts/html5.js"></script>
    <script src="/javascripts/respond.min.js"></script>
  <![endif]-->
  <%= yield :css %>
</head>
<body>
  <div class="wrapper">
    <header>
      <hgroup>
        <h1>Carlos Lamas</h1>
        <h2>Editor</h2>
      </hgroup>
      <nav>
        <ul>
          <li class="about"><a href="#about">About</a></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </div>
  <script src="/javascripts/jquery-1.7.1.min.js"></script>
  <script src="/javascripts/jquery.detectmobilebrowser.js"></script>
  <script src="/javascripts/jquery.fancybox.pack.js"></script>
  <script type="text/javascript">
    if ($(window).width() > 767 && jQuery.browser.mobile == false) {
    	$(function() {
    	  jQuery.extend(jQuery.fancybox.defaults, {
          afterShow: function() {
            $('body').toggleClass('fixed');
          },
          beforeClose: function() {
            $('body').toggleClass('fixed');
          }
        });
    	  $("nav a").fancybox({
          autoSize: false,
          beforeShow: function() {
            $('header h1').toggleClass('raised');
          },
          beforeClose: function() {
            $('header h1').toggleClass('raised');
          },
          height: '100%',
    	    helpers: {
            overlay: {
              css: {'background-color': '#4c489e'},
              opacity: 0.95
            }
          },
          margin: 0,
          maxWidth: 1640,
    		  padding: 0,
          width: '100%',
    		  wrapCSS: 'cover'
        });
    		$(".video").fancybox({
    		  aspectRatio: true,
    		  beforeLoad: function() {
            this.title = $(this.element).children('aside').html();
            this.tpl.prev = "<a title='Previous' class='fancybox-nav fancybox-prev'><em></em>" + $(this.element).parent().prev().find('a > aside').html() + "</a>";
            this.tpl.next = "<a title='Next' class='fancybox-nav fancybox-next'><em></em>" + $(this.element).parent().next().find('a > aside').html() + "</a>";
          },
    		  height: 540,
    		  loop: false,
          margin: 86,
    		  padding: 0,
    		  width: 960,
    		  helpers: {
        		title: {
        			type: 'outside'
        		}
        	}
        });
    	});
    }
  </script>
</body>
</html>