<!doctype html>
<html lang="en">
<head>
  <title>Carlos Lamas</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" href="/stylesheets/screen.css" />
  <script src="/javascripts/html5.js"></script>
</head>
<body>
  <div id="wrapper">
    <header>
      <a href="/"><h1>Carlos <strong>Lamas</strong></h1></a>
      <nav>
        <ul>
          <li class="about"><a href="#about">About</a></li>
          <li class="contact"><a href="#contact">Contact</a></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
    <footer>
      Footer
    </footer>
  </div>
  <script src="/javascripts/jquery-1.7.1.min.js"></script>
  <script src="/javascripts/jquery.fancybox.pack.js"></script>
  <script type="text/javascript">
  	$(document).ready(function() {
  	  jQuery.extend(jQuery.fancybox.defaults, {
  	    helpers: {
          overlay: {
            opacity: 0.9
          }
        }
      });
  	  $("nav a").fancybox({
  	    helpers: {
          overlay: {
            css: {'background-color': '#4c489e'},
            opacity: 0.98
          }
        },
        minHeight: 480,
        maxWidth: '827',
  		  padding: 0,
  		  width: '66.6666666%',
  		  wrapCSS: 'cover'
      });
  		$(".video").fancybox({
  		  aspectRatio: true,
  		  beforeLoad: function() {
          this.title = $(this.element).children('hgroup').html();
        },
  		  height: 540,
  		  loop: false,
  		  padding: 0,
  		  width: 960,
  		  helpers: {
      		title: {
      			type: 'outside'
      		}
      	}
      });
      $(".image").fancybox({
        loop: false,
        padding: 0,
        beforeLoad: function() {
          this.title = $(this.element).children('hgroup').html();
        },
        helpers: {
          title: {
            type: 'outside'
          }
        }
      });
  	});
  </script>
</body>
</html>